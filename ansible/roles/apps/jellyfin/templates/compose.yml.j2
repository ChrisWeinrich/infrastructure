services:
  jellyfin:
    image: {{ compose_container_image }}
    container_name: {{ compose_container_name }}
    restart: unless-stopped
    networks:
      {{ compose_network_name }}:
        ipv4_address: {{ compose_container_ip }}
    volumes:
      - {{ jellyfin_metadata_path }}:/config
      - {{ jellyfin_media_path_1 }}:/media/usb_disk_1:ro
      - {{ jellyfin_media_path_2 }}:/media/usb_disk_2:ro

networks:
  {{ compose_network_name }}:
    external: true
